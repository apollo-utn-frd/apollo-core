          <a href="https://ar.linkedin.com/in/juan-bono-62803685">
          <%= image_tag 'equipo/juan.jpg', class: 'equipo-img' %>
        </div>
        <div class="col-sm">
          <a href="https://ar.linkedin.com/in/matías-mangiantini-668001126">
