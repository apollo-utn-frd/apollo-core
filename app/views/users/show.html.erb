<div class="row">
  <div class="col-3 mt-2">
    <%= render partial: 'users/partials/user_lateral',
               locals: {
                 user: @user
               }
    %>
  </div>

  <div class="col-7 mt-2">
      <% @posts.each do |post| %>
        <%= render partial: "posts/partials/#{post.type}_post",
                  locals: {
                    user: @user,
                    post: post
                  }
        %>
      <% end %>
  </div>
</div>
