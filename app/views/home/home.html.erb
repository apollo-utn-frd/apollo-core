<div class="row">
  <div class="col-3">
    <%= render partial: 'users/partials/user_lateral',
               locals: {
                 user: @user
               }
    %>
    <a class="btn btn-success w-100" href="#" role="button"><i class="fas fa-plus"></i> Agregar ruta de viaje</a>
  </div>

  <div class="col-9">
      <% @posts.each do |post| %>
        <%= render partial: "posts/partials/#{post.type}_post",
                  locals: {
                    user: @user,
                    post: post
                  }
        %>
      <% end %>
  </div>
</div>
