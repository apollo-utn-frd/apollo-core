<div class="row">
  <div class="col-3">
    <%= render partial: 'users/partials/user_lateral',
               locals: {
                 user: @user
               }
    %>
  </div>

  <div class="col-9" align="center">
    <ul class="list-group w-50">
      <% @followings.each do |follower| %>
        <%= render partial: "followings/partials/follower",
                  locals: {
                    follower: follower
                  }
        %>
      <% end %>
    </ul>
  </div>
</div>
